<div class="row">
    <div class="offset-md-1 col-md-10 col-sm-12">
          <div class="login" id="contentArea">
              <h1 class="display-4">Search for a trainer</h1>

              
              <form  enctype="multipart/form-data" method="POST" id="registerForm" novalidate>
                <p class="hint-text">Find a trainer to get training</p>
                <div class="form-group">
                  <div class="row">
                    <p class="lead"><i class="fas fa-user-shield"></i> Personal Information</p>
                  
                  </div>
                </div><div class="form-group">
            <label class="lead">Select Province</label>
            <div class="col-sm-5">
                <select id="province" name="province" ></select>
            </div>
        </div><!--/.form-group-->
        <div class="form-group">
            <label class="lead">City</label>
            <div class="col-sm-4">
                <select name="city" id="city" ></select>
            </div>
        </div><!--/.form-group-->

        <span class="lead"></i>Hourly rate</span>
                    <select name= "hourlyRate" class="sel1">
                        <option>less than $50</option>
                        <option>$50-$100</option>
                        <option>$100-$200</option>
                        <option>$200-$300</option>
                        <option>$300-$400</option>
                        <option>$400-$500</option>
                    </select>
                 <span class="lead"></i>Sex</span>
                    <select name= "sex" class="sel1">
                        <option>Female</option>
                        <option>Male</option>
                        
                    </select>
                <div class="form-group">
                  <div class="row">
                  <span class="lead"></i>Email</span>
                    <div class="col-md-6">
                      
                      <input type="email" class="form-control" id="emailAddress" name="EmailAddress" required
                      value="" placeholder="Email Address">
                    </div>
                    <span class="lead"></i>Date of Birth</span>
                    <div class="col-md-6">
                      <input type="date" class="form-control" id="birthDate" name="birthDate" required
                      value="" placeholder="Date of Birth">
                    </div>
                    
                  </div>
                </div>
                
                
        <label for="comment">About me:</label>
          <textarea name="aboutMe" class="form-control" rows="5" id="comment" required></textarea>
          <br>
        <span class="lead"></i>Trainer Certificate</span>
        
        <input type="file" name="myImage" accept="image/*" id="file-input" onchange="imageExtensionValidate(this)">
        
  
                <div class="form-group mt-4">
                  <div class="row">
                    <p class="lead"><i class="fas fa-database"></i>System Identification</p>
                    <div class="col-md-12">
                      <input type="text" class="form-control" id="username" name="username"  required
                      value="" placeholder="Username">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="password" name="password"  required
                      value="" placeholder="Password">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                      value="" placeholder="Confirm Password">
                    </div>
                  </div>
                </div>
                 
                                                    
                <div class="text-end mt-2">
                  <button id="submitButton" type="submit" class="btn btn-primary">Register</button>
                  <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</button>
                </div>
              </form>
             
          </div>
          <p class="text-center text-muted small">
            Already have an account? 
            <a href="/login">Sign in</a>
          </p>
    </div>
</div>

